{
    "name": "astrake-ems",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"bun run dev:server\" \"bun run dev:ui\"",
        "dev:server": "bun run --watch src/server/server.ts",
        "dev:ui": "vite",
        "build": "bun run build:ui && bun run build:server",
        "build:ui": "vue-tsc -b && vite build",
        "build:server": "bun run scripts/build.ts",
        "release": "bun run build",
        "typecheck": "vue-tsc --noEmit && tsc --noEmit"
    },
    "dependencies": {
        "@mdi/font": "^7.4.47",
        "archiver": "^7.0.1",
        "hono": "^4.6.14",
        "pinia": "^3.0.4",
        "puppeteer-core": "^24.34.0",
        "roboto-fontface": "^0.10.0",
        "vue": "^3.5.24",
        "vue-router": "^4.6.4",
        "vuetify": "^3.11.5",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^24.10.1",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/tsconfig": "^0.8.1",
        "concurrently": "^8.2.2",
        "sass": "^1.97.1",
        "typescript": "^5.3.3",
        "unplugin-fonts": "^1.4.0",
        "unplugin-vue-components": "^30.0.0",
        "vite": "^7.2.4",
        "vite-plugin-vuetify": "^2.1.2",
        "vue-tsc": "^3.1.4"
    }
}